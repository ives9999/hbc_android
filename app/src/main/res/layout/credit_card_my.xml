<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/colonTV"
            style="@style/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common"
            android:textColor="@color/MY_BLACK" />

        <TextView
            android:id="@+id/titleTV"
            style="@style/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效月年"
            android:textColor="@color/MY_BLACK" />

        <ImageView
            android:id="@+id/starIV"
            android:layout_width="@dimen/star"
            android:layout_height="@dimen/star"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            app:srcCompat="@drawable/start" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/part1LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/edit_text_border"
        android:orientation="horizontal"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/monthET"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:hint="05"
            android:textColor="@color/MY_BLACK" />

    </LinearLayout>

    <TextView
        android:id="@+id/monthTV"
        style="@style/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="月"
        android:textColor="@color/MY_BLACK" />

    <TextView
        android:id="@+id/slashTV"
        style="@style/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="/"
        android:textColor="@color/MY_BLACK" />

    <LinearLayout
        android:id="@+id/part2LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/edit_text_border"
        android:orientation="horizontal"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/yearET"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:hint="27"
            android:textColor="@color/MY_BLACK" />
    </LinearLayout>

    <TextView
        android:id="@+id/yearTV"
        style="@style/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="年"
        android:textColor="@color/MY_BLACK" />

</LinearLayout>