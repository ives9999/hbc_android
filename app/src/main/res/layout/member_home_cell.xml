<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/member_home_icon_bg_width"
        android:layout_height="@dimen/member_home_icon_bg_height"
        android:layout_marginTop="@dimen/bottom_margin_top"
        android:background="@drawable/member_home_item"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/member_home_icon_width"
            android:layout_height="@dimen/member_home_icon_height"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/member_home_icon_bg_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/member_home_text_padding_top"
        android:gravity="center|top">

        <TextView
            android:id="@+id/text"
            style="@style/member_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MY_BLACK"
            tools:text="會員資料" />
    </LinearLayout>

</LinearLayout>