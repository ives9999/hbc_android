<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.MemberActivity">

    <include layout="@layout/top" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"
        android:gravity="center"
        android:verticalSpacing="@dimen/member_home_gridview_vertical_spacing"
        android:paddingTop="@dimen/member_home_gridview_padding_top"
        android:numColumns="2"
        android:columnWidth="@dimen/member_home_gridview_column_width"
        android:stretchMode="columnWidth" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <include layout="@layout/bottom" />

    </LinearLayout>

</RelativeLayout>