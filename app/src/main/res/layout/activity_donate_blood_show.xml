<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MY_WHITE"
    android:orientation="vertical"
    tools:context=".controllers.DonateBloodShowActivity">

    <tw.com.bluemobile.hbc.views.Top
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:layout_alignParentTop="true" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/submit"
        android:layout_below="@id/top"
        android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/dataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:paddingTop="16dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <tw.com.bluemobile.hbc.views.IconText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:IconTextValueTV="ABC"
                app:IconTextIconIV="@drawable/ic_blood_type"
                app:IconTextTitleTV="血型：" />

            <ImageView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_dog" />
        </LinearLayout>

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="ABC"
            app:IconTextIconIV="@drawable/ic_blood_type"
            app:IconTextTitleTV="血型：" />

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="5歲"
            app:IconTextIconIV="@drawable/ic_age"
            app:IconTextTitleTV="年齡：" />

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="5歲"
            app:IconTextIconIV="@drawable/ic_age"
            app:IconTextTitleTV="年齡：" />

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/IDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="5歲"
            app:IconTextIconIV="@drawable/ic_age"
            app:IconTextTitleTV="年齡：" />

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/traffic_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="5歲"
            app:IconTextIconIV="@drawable/ic_age"
            app:IconTextTitleTV="年齡：" />

        <tw.com.bluemobile.hbc.views.IconText
            android:id="@+id/nutrient_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:IconTextValueTV="5歲"
            app:IconTextIconIV="@drawable/ic_age"
            app:IconTextTitleTV="年齡：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataContainer"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/edit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血檢資料："
                    android:textColor="@color/MY_BLACK" />
            </LinearLayout>

            <ImageView
                android:id="@+id/blood_imageIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/ic_upload_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataContainer"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/edit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="體檢資料："
                    android:textColor="@color/MY_BLACK" />
            </LinearLayout>

            <ImageView
                android:id="@+id/body_imageIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/ic_upload_image" />
        </LinearLayout>

    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/loading" />

</RelativeLayout>