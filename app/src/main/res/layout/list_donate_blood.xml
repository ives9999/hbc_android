<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:background="@color/MY_WHITE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/list_background"

        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noTV"
                style="@style/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/MY_BLACK" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/typeIV"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/member_pet" />

                    <TextView
                        android:id="@+id/typeTV"
                        style="@style/edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="貓"
                        android:textColor="@color/MY_BLACK" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="血型："
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            android:id="@+id/blood_typeTV"
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textColor="@color/deep_orange_500" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="名稱："
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            android:id="@+id/nameTV"
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="傻眼貓咪傻眼貓咪傻眼貓咪傻眼貓咪"
                            android:textColor="@color/MY_BLACK" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年齡："
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            android:id="@+id/ageTV"
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="歲"
                            android:textColor="@color/MY_BLACK" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重量："
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            android:id="@+id/weightTV"
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/MY_BLACK" />

                        <TextView
                            style="@style/edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公斤"
                            android:textColor="@color/MY_BLACK" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最後修改日期："
                        android:textColor="@color/MY_BLACK" />

                    <TextView
                        android:id="@+id/updated_at"
                        style="@style/edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022-09-30 18:00"
                        android:textColor="@color/MY_BLACK" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/acceptContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/acceptLL"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/acceptTV"
                        style="@style/circle_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="接受"
                        android:textColor="@color/MY_BLACK" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/deleteIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_cross" />

            <ImageView
                android:id="@+id/refreshIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_reload" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>