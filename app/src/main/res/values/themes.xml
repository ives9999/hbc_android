<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hbc" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionBarButtonStyle</item>
        <item name="actionButtonStyle">@style/MyActionBarButtonStyle</item>
        <item name="colorPrimaryDark">@color/TOP</item>
    </style>

    <style name="MyActionBarButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dip</item>
        <item name="android:maxWidth">80dip</item>
        <item name="android:width">60dip</item>
    </style>

    <style name="Theme.Hbc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/MY_BLACK</item>
    </style>

    <style name="Theme.Hbc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Hbc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.Hbc.NoActionBar</item>
    </style>

    <style name="bottom_text">
        <item name="android:textColor">@color/MY_BLACK</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="member_home_text">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_title">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_submit">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="EditTextNormal">
        <attr name="titleTV" format="string" />
        <attr name="valueET" format="string" />
    </declare-styleable>
</resources>
















